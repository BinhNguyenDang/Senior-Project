<% unless last_message.nil? %>
  <div class="row">
    <div class="col-12 d-flex align-items-center justify-content-between" style="border-bottom: 2px solid black;">
      <em class="last-message"><%= "#{last_message.user.username} sent a message".truncate(40) %></em>
      <%= content_tag(:em, class:"last-message-time", 
      data: {
        time: last_message.created_at.to_i 
        }) do %>
      <em class="last-message"><%= "#{time_ago_in_words(last_message.created_at)} ago"%></em>
      <% end %>
    </div>
  </div>
<% end %>